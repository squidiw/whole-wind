{% if image %}
    {% unless class %}
      {% assign class = 'w-full h-auto' %}
    {% endunless %}
    <picture>
      <source srcset="{% if mobile_image %}{{ mobile_image | img_url: '640x' }} 1x,{{ mobile_image | img_url: '1280x' }} 2x,{% else %}{{ image | img_url: '640x' }} 1x,{{ image | img_url: '1280x' }} 2x{% endif %}" media="(max-width: 560px) ">
      <source srcset="{{ image | img_url: '1280x' }} 1x, {{ image | img_url: '2048x' }} 2x" media="(max-width: 1024px) ">
      <source srcset="{{ image | img_url: '2400x' }} 1x, {{ image | img_url: '4800x' }} 2x" media="(max-width: 2400px) ">
      <img class="{{ class }}" src="{{ image | img_url: 'master' }}" srcset="{{ image | img_url: '1280x' }} 1x, {{ image | img_url: '2048x' }} 2x" alt="{% unless alt %}{{ image.alt | escape }}{% else %}{{ alt }}{% endunless %}" loading="lazy">
    </picture>
    {% else %}
      <p class="text-red-800">
        Error: Image is not defined
      </p>
    {% endif %}



    {% comment %}theme-check-disable ImgLazyLoading, RemoteAsset{% endcomment %}
{% comment %}
  Renders a specific image.

  Guidelines:
    - Think of snippets like functions each time you are going
    to reuse a code block, why not just make it a snippet ;)

  Accepts:
    - image: {object} Image object (required)
    - class: {string} Extra classes (optional)
    - lazyload: {boolean} Lazyload the image (optional) (default: true)
    - alt: {string} Custom image ALT (optional) (default: image.alt)
    - placeholder: {string} Placeholder name when image is empty (optional) (default: 'hero-apparel-1')

  Usage:
    {% render 'image' with product.featured_image %}
{% endcomment %}

{% liquid
  assign image_class = 'aspect-auto h-auto w-full rounded-md object-cover ' | append: class
  assign alt = alt | default: image.alt | escape

  assign preload = false
  assign priority = 'auto'
  assign decoding = 'auto'

  if lazyload or lazyload == null
    assign lazyload = 'lazy'
    assign decoding = 'async'
  elsif lazyload == false
    assign lazyload = 'eager'
    assign priority = 'high'
    assign preload = true
  endif
%}

{% if image and image != blank %}
  {{
    image
    | image_url: width: image.width
    | image_tag:
      alt: image_alt,
      class: image_class,
      widths: '200,300,400,500,600,700,800,1000,1200,1400,1600,1800,2000,2200',
      loading: lazyload,
      fetchpriority: priority,
      decoding: decoding,
      preload: preload
  }}
{% else %}
  {% liquid
    assign placeholder_name = placeholder | default: 'hero-apparel-1'
    capture placeholder_image
      echo placeholder_name | placeholder_svg_tag | base64_encode | prepend: 'data:image/svg+xml;base64,'
    endcapture
  %}

  <img
    role="presentation"
    class="{{ image_class }}"
    src="{{ placeholder_image }}"
    alt="{{ placeholder_name }}"
    width="800"
    height="800"
    loading="{{ lazyload }}"
    fetchpriority="{{ priority }}">
{% endif %}